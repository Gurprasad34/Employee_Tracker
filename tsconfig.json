{
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions" : true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",

    /* JavaScript Support */
  

    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "db/connection.ts", "index.ts"]
}
